@model Product
@{
    ViewData["Title"] = "EditForm";
}

<h1>Edit a Product</h1>

<form method="post" action="/ADMIN/Edit">
    <input type="hidden" value="@Model.id" name="id" />
    Product Name: <input type="text" value="@Model.name" name="name" /> <br />
    Product Category: <input type="text" value="@Model.category" name="category" /> <br />
    Product Description: <input type="text" value="@Model.description" name="description" /> <br />
    Price of New Product: <input type="text" value="@Model.price" name="price" /> <br />
    <small>(Please enter new price in decimal form)</small> <br />
    <br />
    <br />
    Does everything look correct?
    <input type="submit" value="SAVE" />
</form>
